<?xml version="1.0" encoding="UTF-8"?>
	<widget id="com.com.workshop" version="7.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
		<name>Workshop App</name>
		<description>Turn stuff to other stuff</description>
		<author email="johnnytal9@gmail.com" href="http://www.ilyichgames.com">Johnny Tal</author>
		<content src="index.html"/>
		
		<access origin="*"/>
		<allow-intent href="http://*/*"/>
		<allow-intent href="https://*/*"/>
		<allow-intent href="tel:*"/>
		<allow-intent href="sms:*"/>
		<allow-intent href="mailto:*"/>
		<allow-intent href="geo:*"/>
		
		<platform name="android">
			<allow-intent href="market:*"/>
			<preference name="enabled" value="true"/>
		</platform>
		<platform name="ios">
			<allow-intent href="itms:*"/>
			<allow-intent href="itms-apps:*"/>
		</platform>
		
		<preference name="Fullscreen" value="true"/>
		<preference name="Orientation" value="portrait"/>
		<preference name="android-build-tool" value="gradle" />
		<preference name="android-targetSdkVersion" value="28"/>
		<preference name="android-minSdkVersion" value="16"/>
		<preference name="android-build-tool" value="gradle" />
		<preference name="phonegap-version" value="cli-7.1.0" />

		<plugin name="cordova-plugin-lightsensor" spec="*"/>
		<plugin name="cordova-plugin-insomnia" spec="*"/>
		<plugin name="cordova-plugin-statusbar" spec="*"/>
		<plugin name="cordova-plugin-extension" spec="*"/>
		<plugin name="cordova-plugin-whitelist" version="1"/>
		
		<icon src="512x512.png" />
		
	</widget>
